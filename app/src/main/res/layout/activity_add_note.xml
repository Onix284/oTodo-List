<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNote">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Enter Your Note"
        android:textColor="#5900FF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_noteTitle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/edittextbackground"
        android:elevation="16dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:shadowColor="@color/black"
        android:shadowDy="4"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_noteDescription"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Description"
        android:shadowColor="@color/black"
        android:shadowDy="4"
        android:elevation="16dp"
        android:background="@drawable/edittextbackground"
        app:layout_constraintEnd_toEndOf="@+id/et_noteTitle"
        app:layout_constraintStart_toStartOf="@+id/et_noteTitle"
        app:layout_constraintTop_toBottomOf="@+id/et_noteTitle"
        android:paddingHorizontal="10dp"/>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#FF0000"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_noteDescription"
        app:layout_constraintStart_toStartOf="@+id/et_noteDescription"
        app:layout_constraintTop_toBottomOf="@+id/et_noteDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>